<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#008783"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/iv_update_collection"
            android:layout_toLeftOf="@+id/iv_open_app"
            android:layout_toStartOf="@+id/iv_open_app"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:src="@drawable/ic_sync_white_24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/iv_open_app"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:src="@drawable/ic_open"
            android:layout_height="24dp" />

        <TextView
            android:text="VIRTUS"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#c4c4c4"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:text="Reuniões"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/iv_load_left"
            android:layout_width="24dp"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iv_load_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_height="24dp" />

    </RelativeLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/list_widget_view"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:loopViews="true" />

</LinearLayout>
